@model RegisterVM;

@{
  ViewData["Title"] = "Register";
}

<div class="flex h-screen justify-center items-center">
    <div class="flex flex-col bg-neutral-100 w-[30rem] h-auto p-10 rounded-lg justify-center">
        <p class="text-2xl font-semibold text-center text-neutral-500">Register</p>
        <form asp-action="Register" method="post">
            <div class="flex flex-col space-y-4">
                <div class="flex flex-col space-y-1">
                    <label class="text-sm text-neutral-500" asp-for="Name">Name</label>
                    <input class="p-2 rounded-md border text-sm text-neutral-500" type="text" asp-for="Name" />
                    <span class="text-xs text-red-400" asp-validation-for="Name"></span>
                </div>
                <div class="flex flex-col space-y-1">
                    <label class="text-sm text-neutral-500" asp-for="Email">
                        Email
                    </label>
                    <input class="p-2 rounded-md border text-sm text-neutral-500" type="email" asp-for="Email" />
                    <span class="text-xs text-red-400" asp-validation-for="Email"></span>
                </div>
                <div class="flex flex-col space-y-1">
                    <label class="text-sm text-neutral-500" asp-for="Password">Password</label>
                    <input class="p-2 rounded-md border text-sm text-neutral-500" type="password" asp-for="Password" />
                    <span class="text-xs text-red-400" asp-validation-for="Password"></span>
                </div>
                <div class="flex flex-col space-y-1">
                    <label class="text-sm text-neutral-500" asp-for="ConfirmPassword">Confirm Password</label>
                    <input class="p-2 rounded-md border text-sm text-neutral-500" type="password" asp-for="ConfirmPassword" />
                    <span class="text-xs text-red-400" asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="flex flex-col space-y-1">
                    <input class="p-4 bg-red-400 rounded-md cursor-pointer border hover:bg-red-500 text-white" type="submit" value="Submit" name="Submit" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
